<%if current_user.users? %>
  <div class="text-center text-primary">
    <%=link_to 'Rejected Posts' ,posts_myreject_path %>
    <%=link_to 'Pending Posts' ,posts_pending_path %>
    <%=link_to 'Create a Post' ,new_post_path%>
  </div>
  <ul >
    <% @posts.each do |post| %>
      <%if post .approved?%>
        <div class="container mt-5">
          <div class="d-flex justify-content-center row">
            <div class="col-md-8">
              <div class="d-flex flex-column comment-section">
                <div class="bg-white p-2">
                  <div class="d-flex flex-row user-info"><img class="rounded-circle" src="https://i.imgur.com/WUGxiYhb.jpg" width="40">
                    <div class="d-flex flex-column justify-content-start ml-2"><span class="d-block font-weight-bold name"><%=post.user.email %></span><span class="date text-black-50"><%= post.created_at.strftime("%Y-%m-%d  at  %H:%M:%S") %></span></div>
                  </div>
                  <div class="mt-2">
                    <p class="comment-text">
                      <%=post.caption %>
                    </p>
                  </div>
                  <% if  post.image.attached?%>
                    <p>
                      <%=link_to (image_tag post.image, style: "width: 710px; display:block") , post_path(post)  %>
                    </p>
                  <%end%>
                </div>
                <div class="bg-white">
                  <div class="d-flex flex-row fs-12">
                    <div class="like p-2 cursor"><i class="fa fa-thumbs-o-up"></i><span class="ml-1">Like</span></div>
                    <div class="like p-2 cursor"><i class="fa fa-commenting-o"></i><span class="ml-1">Comment</span></div>
                    <%# <div class="like p-2 cursor"><i class="fa fa-share"></i><span class="ml-1">Share</span></div> %>
                  </div>
                </div>
                <div class="bg-light p-2">
                  <div class="form--input">
                    <% post.comments.each do |comment|%>
                      <%=comment.content%>
                      <%= link_to 'Edit' , edit_post_comment_path(post,comment) %>
                      <%= link_to 'Destroy', post_comment_path(post, comment) , method: :delete %>
                      <br>
                    <% end %>
                    <%=render partial: "comments/form", locals: {post: post} %>
                    <%# <div class="d-flex flex-row align-items-start"><img class="rounded-circSSle" src="https://i.imgur.com/WUGxiYhb.jpg" width="40">
                  <textarea class="form-control ml-1 shadow-none textarea"></textarea>
                </div>
                <div class="mt-2 text-right"><button class="btn btn-primary btn-sm shadow-none" type="button">Post comment</button><button class="btn btn-outline-primary btn-sm ml-1 shadow-none" type="button">Cancel</button></div>
              </div> %>
                  </div>
                </div>
              </div>
            </div>
          <%end%>
        <% end %>
      </ul>
    <%end%>
    <%if current_user.moderators? %>
      <% controller.redirect_to moderators_index_path %>
    <%end%>
    <%if current_user.admin? %>
      <% controller.redirect_to moderators_index_path %>
    <%end%>
